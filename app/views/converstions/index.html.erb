<p id="notice"><%= notice %></p>

<h1>All Conversations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @converstions.each do |converstion| %>
      <% if converstion.sender_id ==current_user.id || converstion.recipient_id == current_user.id %>
        <% if converstion.sender_id == current_user.id %>
          <% recipient = User.find(converstion.recipient_id) %>
        <%else%>
          <% recipient = User.find(converstion.sender_id) %>
        <%end%>
        <h3><%= link_to recipient.email, converstion_messages_path(converstion)%></h3>h3>
      <%end%>

      <tr>
        
        
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<h1 class="panel-heading">All Users:</h1> 
<% @users.each do |user| %>
  <% if user.id != current_user.id%>
    <%= link_to user.email, converstions_path(sender_id: current_user.id, recipient_id: user.id),method: "post"%>
  <%end%>
<%end%>
